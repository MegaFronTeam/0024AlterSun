		+topLine()
	.sticky-wrapper
		+page-head-fixed({
			title,
			btn: 'btn',
			menu: 'menu'
		})
			+infoPanel()
				+infoPanelItem(``, `Выбор навеса`).--btn
				+infoPanelItem(``, `15.09.21`).--btn
				+infoPanelItem(`eye`, `834`).--views
				+infoPanelItem(`clock`, `5&nbsp;минут`).--time
