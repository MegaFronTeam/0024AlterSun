mixin page-head(data)
	+b.page-head
		.container
			+e.row.row
				if data.btn
					.col-auto
						+e.arrow-back(href="#")
							+icon('arrow-left')
				if data.menu
					+e.col.col-auto
						+categoryMenu()
				if data.search
					.col-sm
						+b.search-field
							input(type='text' name='search' placeholder='Поиск по блогу' aria-label='Search through site content')
							button
								+icon('search')
			+e.wrap
				h1!= data.title
				if data.text
					p!= data.text
				block

mixin page-head-fixed(data)
	+b.page-head
		+e.row--fix
			.container
				.row
					if data.btn
						.col-auto
							+e.arrow-back(href="#")
								+icon('arrow-left')
					if data.menu
						+e.col.col-auto
							+categoryMenu()
					if data.search
						.col-sm
							+b.search-field
								input(type='text' name='search' placeholder='Поиск по блогу' aria-label='Search through site content')
								button
									+icon('search')
		+e.wrap
			.container
				h1!= data.title
				if data.text
					p!= data.text
				block

mixin categoryMenu()
		+b.category-menu.dropdown
			+e.btn.dropdown__btn
				+icon('categories-btn')
				span Категории
			+b.categories.dropdown__content
				mixin categoryItem(t, i)
					+e.item(href="#")&attributes(attributes)
						span!= t
						img(src=`img/svg/categories-${i}.svg`, alt="")
						//- +icon(`categories-${i}`)
				+categoryItem(`Советы <br> и&nbsp;лайфхаки`, 1).active
				+categoryItem(`Технические <br> детали`, 2)
				+categoryItem(`Безопасность <br> и&nbsp;гарантии`, 3)
				+categoryItem(`Внешний <br> вид`, 4)
				+categoryItem(`Выбор <br> навеса`, 5)
				+categoryItem(`Примеры <br> наших работ`, 6)
			
mixin infoPanel()
	+b.info-panel
		.row
			block

mixin infoPanelItem(i, t)
	.col-auto
		+e.item&attributes(attributes)
			if i
				+icon(`${i}`)
			span!= t

mixin scrollToTop()
	+b.back-top#back-top
		a(href="#top")
			+icon('arrow-up')
			span Наверх

mixin content(title, ...items)
	+e.content
		h4!= title
		each item in items
			p!= item
		.text-end.mt-3
			a(href="#").btn.btn-primary Кнопка 

mixin blogItem(i, h)
	+b.blog-item(href="#")
		+pic(`blog-${i}.jpg`, 'bg', 0)
		h4!= h
		+infoPanel()
			+infoPanelItem(``, `15.09.21`).--btn
			+infoPanelItem(`eye`, `834`).--views
			+infoPanelItem(`clock`, `5&nbsp;минут`).--time

