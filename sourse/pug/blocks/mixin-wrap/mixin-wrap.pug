mixin adv-item(title,caption,btn,img)
	+b.adv-item.bg-wrap
		+pic(`adv-item-${img}.jpg`,`bg`,0).picture-bg
		+e.title!=title
		+e.caption!=caption
		+e.btn(href="#")!=btn

mixin adv-item-white(title,caption,btn)
	+b.adv-item--white
		if title
			+e.title!=title
		+e.caption!=caption
		if btn
			+e.btn(href="#")!=btn
		else
			+b.social
				+e.item(href="#" target="_blank")
					+e.icon-wrap
						+icon('instagram')
					span Instagram
				+e.item(href="#" target="_blank")
					+e.icon-wrap
						+icon('youtube')
					span YouTube
				+e.item(href="#" target="_blank")
					+e.icon-wrap
						+icon('whatsapp')
					span Whatsapp

